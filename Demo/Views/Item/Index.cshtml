@model IEnumerable<Item>

    <a href="/item/create" class="btn btn-primary">Add Item</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Item ID</th>
                <th>Item Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Item_Name</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Item" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="Delete" asp-controller="Item" onclick="return confirm('Are You Sure?')" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
