@model IEnumerable<Store>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <a href="/store/create" class="btn btn-danger">Add Store</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            
                @foreach( var item in Model)
                {
                <tr>
                <td>@item.Id</td>
                    <td>@item.Store_Name</td>
                    <td>  <a asp-action="Edit" asp-controller="Store" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                           <a asp-action="Delete" asp-controller="Store" onclick="retun confirm('Are You Sure?')" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                }
            
        </tbody>

    </table>
</body>
</html>
