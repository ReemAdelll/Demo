@model IEnumerable<Store>
<a href="/store/create" class="btn btn-primary">Add Store</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Store ID</th>
                <th>Store Name</th>
            </tr>
        </thead>
        <tbody>
            
                @foreach( var item in Model)
                {
                <tr>
                <td>@item.Id</td>
                    <td>@item.Store_Name</td>
                    <td>  <a asp-action="Edit" asp-controller="Store" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="Delete" asp-controller="Store" onclick="return confirm('Are You Sure?')" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                }
            
        </tbody>

    </table>

